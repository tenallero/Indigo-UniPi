<?xml version="1.0"?>
<Actions>	
	<Action id="turnOnRelay" deviceFilter="self">
		<Name>Turn On Relay</Name>
		<CallbackMethod>turnOnRelay</CallbackMethod>
		<ConfigUI>
			<Field id="description" type="textfield" hidden="true">
				<Label>runtime calculated</Label>
			</Field>
			<Field id="circuit" type="menu">
				<Label>Turn On:</Label>
				<List class="self" method="menuGetRelays" />
			</Field>
			<Field id="sep1" type="separator" />
			<Field id="turnOnButton" type="button">
				<Label>Test:</Label>
				<Title>Turn On</Title>
				<CallbackMethod>buttonTurnOnHit</CallbackMethod>
			</Field>
			<Field id="turnOffButton" type="button">
				<Label></Label>
				<Title>Turn Off</Title>
				<CallbackMethod>buttonTurnOffHit</CallbackMethod>
			</Field>
		</ConfigUI>
	</Action>
	<Action id="turnOffRelay" deviceFilter="self">
		<Name>Turn Off Relay</Name>
		<CallbackMethod>turnOffRelay</CallbackMethod>
		<ConfigUI>
			<Field id="description" type="textfield" hidden="true">
				<Label>runtime calculated</Label>
			</Field>
			<Field id="circuit" type="menu">
				<Label>Turn Off:</Label>
				<List class="self" method="menuGetRelays" />
			</Field>
			<Field id="sep1" type="separator" />
			<Field id="turnOnButton" type="button">
				<Label>Test:</Label>
				<Title>Turn On</Title>
				<CallbackMethod>buttonTurnOnHit</CallbackMethod>
			</Field>
			<Field id="turnOffButton" type="button">
				<Label></Label>
				<Title>Turn Off</Title>
				<CallbackMethod>buttonTurnOffHit</CallbackMethod>
			</Field>
		</ConfigUI>
	</Action>
</Actions>
